<h1>Edit Blog</h1>
<form>
  <div >
    <label for="title">Title</label>
    {{input value=model.title id="title" class="form-control"}}
  </div>

  <div class="form-group">
    <label for="body">Body</label>
    {{textarea value=model.body class="form-control" id="body" rows="15"}}
  </div>

  <button class="btn btn-primary" {{action 'update' }}>Update</button>
  <button class="btn btn-danger" {{action 'delete' }}>Delete Blog</button>
</form>

  <ul>

    {{#each model.comments as |comment|}}
    <li>{{comment.body}} <span class="glyphicon glyphicon-minus" aria-hidden="true" {{action 'delCommet' model comment}}></span></li>
    {{/each}}
  </ul>
<span class="glyphicon glyphicon-plus" aria-hidden="true">{{input type="checkbox" name="checkedToAdd" checked=commetAdd}}</span>


  {{#if commetAdd}}
  <div class="form-group">
    <label for="body">Comment Body</label>
    {{textarea value=bodyComment class="form-control" id="bodyComment" rows="3"}}
  </div>
  <button class="btn btn-primary" {{action 'addCommet' this.bodyComment}}>Add Comment</button>
  {{/if}}
